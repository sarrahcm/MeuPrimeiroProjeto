<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="250dp"
        android:text="Nome:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edttext_nome"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="469dp"
        android:layout_marginEnd="76dp"
        android:hint=" " />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="O índice de massa corporal (IMC) é uma medida internacional usada para calcular se uma pessoa está no peso ideal.
 Trata-se de um método fácil e rápido para a avaliação do nível de gordura de cada pessoa."
        android:textAlignment="center"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:textSize="15dp"
        android:layout_marginTop="45sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="518dp"
        android:text="Peso:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="131dp"
        android:layout_marginTop="560dp"
        android:text="Altura:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edttext_peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="129dp"
        android:hint="ex.: 95kg"
        android:inputType="numberDecimal"
        android:maxLength="6" />

    <EditText

        android:id="@+id/edittext_altura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edttext_peso"
        android:layout_marginStart="203dp"
        android:layout_marginTop="-5dp"
        android:hint="ex.: 1.87 "
        android:inputType="numberDecimal"
        android:maxLength="4" />

    <ImageView
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="314dp"
        android:src="@drawable/imc" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="147dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="280sp"
        android:layout_marginBottom="-21dp"
        android:src="@drawable/click" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="156dp"
        android:layout_height="93dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="43dp"
        android:text="DESCUBRA" />


</RelativeLayout>